<scripts>

    <script for="enemies">
        <repeat count="10">
            <create id="enemy1" x="200" y="0"/>
            <create id="enemy2" x="1100" y="0"/>
            <wait duration="1500"/>
        </repeat>
    </script>

    <template id="enemy1" sprite="enemy">
        <repeat>
            <repeat count="5" wait="no">
                <fire/>
                <wait duration="200"/>
            </repeat>
            <move x="900" y="150" duration="3000"/>
            <repeat count="5" wait="no">
                <fire/>
                <wait duration="200"/>
            </repeat>
            <move x="-900" y="150" duration="3000"/>
        </repeat>
    </template>

    <template id="enemy2" sprite="enemy">
        <repeat>
            <repeat count="3" wait="no">
                <fire/>
                <wait duration="300"/>
            </repeat>
            <move x="-900" y="150" duration="3000"/>
            <repeat count="3" wait="no">
                <fire/>
                <wait duration="300"/>
            </repeat>           
            <move x="900" y="150" duration="3000"/>
        </repeat>
    </template>
    
